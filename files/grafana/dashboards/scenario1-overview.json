{
  "id": null,
  "uid": "scenario1-overview",
  "title": "Scenario 1 - Auto Scaling Overview",
  "tags": ["scenario1", "autoscaling"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "Cluster Summary",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Nodes Ready",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "scenario1:node_ready", "legendFormat": "ready nodes" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 }
    },
    {
      "type": "stat",
      "title": "HPA Desired / Current",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "scenario1:hpa_desired", "legendFormat": "desired" },
        { "expr": "scenario1:hpa_current", "legendFormat": "current" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 }
    },
    {
      "type": "stat",
      "title": "Pods Desired / Ready",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "scenario1:pod_desired", "legendFormat": "desired" },
        { "expr": "scenario1:pod_ready", "legendFormat": "ready" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 }
    },
    {
      "type": "stat",
      "title": "HTTP Request Rate",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(http_requests_total[1m]))", "legendFormat": "req/s" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (Total)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "scenario1:cpu_usage", "legendFormat": "CPU cores" }
      ],
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 5 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (Total)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "scenario1:mem_working_set / 1024 / 1024 / 1024", "legendFormat": "GB" }
      ],
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 5 }
    },
    {
      "type": "logs",
      "title": "Loki - Scaling Events",
      "datasource": "Loki",
      "targets": [
        { "expr": "{namespace=\"petclinic\"} |= \"Scaled up\"" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
    },
    {
      "type": "table",
      "title": "Icinga2 Alerts (Nodes / Pods)",
      "datasource": "Icinga2",
      "targets": [{ "expr": "icinga2_host_state" }],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
    }
  ]
}
