{
  "id": null,
  "uid": "scenario1-overview",
  "title": "Scenario 1 - HPA Auto Scaling Detailed",
  "tags": ["scenario1", "autoscaling", "hpa", "eks", "locust", "observability"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 14,
  "refresh": "5s",
  "panels": [

    {
      "type": "row",
      "title": "üåê Namespace Resource Breakdown",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage by Namespace (System / App / Monitor)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"kube-system|kube-node-lease|kube-public\"}[2m]))", "legendFormat": "System" },
        { "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"petclinic|default|backend|frontend|gateway\"}[2m]))", "legendFormat": "App" },
        { "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"monitoring|observability|loki|tempo|grafana\"}[2m]))", "legendFormat": "Monitor" }
      ],
      "fieldConfig": { "defaults": { "unit": "cores", "color": { "mode": "palette-classic" } } },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 1 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage by Namespace (System / App / Monitor)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(container_memory_working_set_bytes{namespace=~\"kube-system|kube-node-lease|kube-public\"}) / 1024 / 1024 / 1024", "legendFormat": "System" },
        { "expr": "sum(container_memory_working_set_bytes{namespace=~\"petclinic|default|backend|frontend|gateway\"}) / 1024 / 1024 / 1024", "legendFormat": "App" },
        { "expr": "sum(container_memory_working_set_bytes{namespace=~\"monitoring|observability|loki|tempo|grafana\"}) / 1024 / 1024 / 1024", "legendFormat": "Monitor" }
      ],
      "fieldConfig": { "defaults": { "unit": "gigabytes" } },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 1 }
    },

    {
      "type": "row",
      "title": "üß† Node Resources Overview",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage per Node (%)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "avg(rate(node_cpu_seconds_total{mode!=\"idle\"}[2m])) by (instance) * 100", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage per Node (GB)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes)/1024/1024/1024", "legendFormat": "{{instance}}" }
      ],
      "fieldConfig": { "defaults": { "unit": "gigabytes" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },

    {
      "type": "row",
      "title": "üìä Cluster & HPA Summary (Dynamic Trends)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 }
    },
    {
      "type": "timeseries",
      "title": "Pods Desired vs Ready (per Deployment)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(kube_deployment_spec_replicas) by (deployment)", "legendFormat": "{{deployment}} Desired" },
        { "expr": "sum(kube_deployment_status_replicas_ready) by (deployment)", "legendFormat": "{{deployment}} Ready" }
      ],
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "HPA Desired vs Current Replicas (per Deployment)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(kube_horizontalpodautoscaler_status_desired_replicas) by (deployment)", "legendFormat": "{{deployment}} Desired" },
        { "expr": "sum(kube_horizontalpodautoscaler_status_current_replicas) by (deployment)", "legendFormat": "{{deployment}} Current" }
      ],
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "Pending Pods Over Time",
      "datasource": "Prometheus",
      "targets": [{ "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})", "legendFormat": "Pending Pods" }],
      "fieldConfig": { "defaults": { "color": { "mode": "fixed", "fixedColor": "orange" } } },
      "gridPos": { "h": 5, "w": 12, "x": 0, "y": 31 }
    },
    {
      "type": "timeseries",
      "title": "Node Count (Ready vs NotReady)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "count(kube_node_status_condition{condition=\"Ready\",status=\"true\"})", "legendFormat": "Ready" },
        { "expr": "count(kube_node_status_condition{condition=\"Ready\",status=\"false\"})", "legendFormat": "Not Ready" }
      ],
      "gridPos": { "h": 5, "w": 12, "x": 12, "y": 31 }
    },

    {
      "type": "row",
      "title": "‚öôÔ∏è Auto Scaling Metrics (Pod + Node)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 }
    },
    {
      "type": "timeseries",
      "title": "Cluster Autoscaler Events",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "increase(cluster_autoscaler_scaled_up_nodes_total[5m])", "legendFormat": "Scaled Up" },
        { "expr": "increase(cluster_autoscaler_scaled_down_nodes_total[5m])", "legendFormat": "Scaled Down" }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 37 }
    },
    {
      "type": "timeseries",
      "title": "Pod Lifecycle (Created / Deleted)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "increase(kube_pod_created[5m])", "legendFormat": "Created" },
        { "expr": "increase(kube_pod_deleted[5m])", "legendFormat": "Deleted" }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 37 }
    },
    {
      "type": "timeseries",
      "title": "Scaling Latency (Pod Creation Delay)",
      "datasource": "Prometheus",
      "targets": [{ "expr": "rate(kube_pod_created[5m]) - rate(kube_pod_start_time_seconds[5m])", "legendFormat": "Creation Delay (s)" }],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 37 }
    },
    {
      "type": "timeseries",
      "title": "Correlation: Locust RPS vs HPA Desired Replicas",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "locust_current_rps", "legendFormat": "RPS (load)" },
        { "expr": "sum(kube_horizontalpodautoscaler_status_desired_replicas)", "legendFormat": "HPA desired replicas" }
      ],
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 43 }
    },

    {
      "type": "row",
      "title": "üöÄ Application Performance (Locust + Prometheus)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 49 }
    },
    {
      "type": "timeseries",
      "title": "Latency (p95 / p99)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "locust_response_time_percentile{percentile=\"0.95\"}", "legendFormat": "p95" },
        { "expr": "locust_response_time_percentile{percentile=\"0.99\"}", "legendFormat": "p99" }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 50 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Throughput (req/s)",
      "datasource": "Prometheus",
      "targets": [{ "expr": "locust_current_rps", "legendFormat": "Requests/s" }],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 50 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (%)",
      "datasource": "Prometheus",
      "targets": [{ "expr": "locust_fail_ratio * 100", "legendFormat": "Error %" }],
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 50 }
    },

    {
      "type": "row",
      "title": "üìú Logs & Alerts",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 56 }
    },
    {
      "type": "logs",
      "title": "Loki - Scaling Events",
      "datasource": "Loki",
      "targets": [{ "expr": "{namespace=\"petclinic\"} |= \"Scaled\" or |= \"scale\"" }],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 57 }
    },
    {
      "type": "table",
      "title": "Icinga2 Alerts (Nodes / Pods)",
      "datasource": "Icinga2",
      "targets": [{ "expr": "icinga2_host_state" }],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 57 }
    },

    {
      "type": "row",
      "title": "üìà Integrated Overview (Scenario 1 Full)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 65 }
    },
    {
      "type": "timeseries",
      "title": "RPS vs Latency vs Error Rate (%)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "locust_current_rps", "legendFormat": "RPS" },
        { "expr": "locust_response_time_percentile{percentile=\"0.95\"}", "legendFormat": "Latency (p95)" },
        { "expr": "locust_fail_ratio * 100", "legendFormat": "Error Rate (%)" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 66 }
    },
    {
      "type": "timeseries",
      "title": "HPA Desired vs Current Replicas vs RPS",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(kube_horizontalpodautoscaler_status_desired_replicas)", "legendFormat": "HPA Desired" },
        { "expr": "sum(kube_horizontalpodautoscaler_status_current_replicas)", "legendFormat": "HPA Current" },
        { "expr": "locust_current_rps", "legendFormat": "RPS" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 74 }
    },
    {
      "type": "timeseries",
      "title": "Cluster Autoscaler Node Scaling Events",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "increase(cluster_autoscaler_scaled_up_nodes_total[5m])", "legendFormat": "Scaled Up" },
        { "expr": "increase(cluster_autoscaler_scaled_down_nodes_total[5m])", "legendFormat": "Scaled Down" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 82 }
    },
    {
      "type": "timeseries",
      "title": "Overall CPU & Memory Utilization (System vs App vs Monitor)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"petclinic|backend|frontend|gateway\"}[2m]))", "legendFormat": "App CPU" },
        { "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"monitoring|grafana|loki|tempo\"}[2m]))", "legendFormat": "Monitor CPU" },
        { "expr": "sum(container_memory_working_set_bytes{namespace=~\"petclinic|backend|frontend|gateway\"}) / 1024 / 1024 / 1024", "legendFormat": "App Memory (GB)" },
        { "expr": "sum(container_memory_working_set_bytes{namespace=~\"monitoring|grafana|loki|tempo\"}) / 1024 / 1024 / 1024", "legendFormat": "Monitor Memory (GB)" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 90 }
    }
  ]
}
